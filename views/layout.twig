        <script 
            src="https://cdnjs.cloudflare.com/ajax/libs/timeago.js/3.0.2/timeago.locales.min.js">
        </script>

        <script>
            timeago().render(document.querySelectorAll('.timeago'), 'fr');
        </script>

    </body>

